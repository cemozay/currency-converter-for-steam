{
  "manifest_version": 3,
  "name": "Currency Converter for Steam",
  "version": "1.0.0",
  "description": "Convert Steam game prices to any currency. Automatically detects Steam's currency and converts to your selected currency.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://api.exchangerate-api.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://store.steampowered.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
